<% if notice %>
<p id="notice" class="alert alert-info"><%= notice %></p>
<% end %>
<h1>Liste des Tâches</h1>
<div class="center bottom">
<button class="btn btn-primary "><%= link_to 'Ajouter une tâche', new_task_path %></button>
</div>
<ul class="list-group">
  <% @tasks.each do |task| %>

  <div class="panel panel-default">
    <div class="panel-body">
      <b><%= task.titre %> - <% if task.status==1 %> A faire <% end %> <% if task.status==2 %> En cours <% end %> <% if task.status==3 %> Terminée <% end %></b>
      <div id="actions" class="btn-group" role="group" aria-label="...">
        <%= link_to edit_task_path(task), class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <% end %>
        <%= link_to task_path(task),
                method: :delete,
                data: { confirm: 'Are you sure?' },
                class: 'btn btn-default'  do %>
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        <% end %>
        <%= link_to task_path(task), class: 'btn btn-default' do %>
          <span class="glyphicon glyphicon-resize-full" aria-hidden="true"></span>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</ul>
